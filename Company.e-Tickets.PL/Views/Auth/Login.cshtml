@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-danger" asp-validation-summary="All"></div>

<div class="container">
    <div class="card">
        <div class="card-heading">
            <h2>Login to Your Account</h2>
        </div>

        <form class="card-form" asp-action="Login" enctype="multipart/form-data">
            <div class="input">
                <input asp-for="Email" class="input-field" required />
                <label class="input-label">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input">
                <input asp-for="Password" class="input-field" required />
                <label class="input-label">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input remember-me">
                <input asp-for="RememberMe" type="checkbox" id="remember-me-checkbox" />
                <label for="remember-me-checkbox" class="remember-me-label">Remember me</label>
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>


            <div class="action">
                <button type="submit"  class="addbtn" style="background-color : darkslategray;">Login</button>
            </div>
        </form>

        <div class="card-info">
            <p>
                Don't you have an account ?' <a asp-action="Register">Register Now!</a>
                
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}