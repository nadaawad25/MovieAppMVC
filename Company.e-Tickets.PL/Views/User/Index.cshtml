@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
    <div class="alert alert-dark">
        <h3>All Users</h3>
        <div class="m-2" >
            <form class="row offset-2 " asp-action="Index">
                <div class="col-8">
                    <input class="form-control" type="text" placeholder="User's Name " name="SearchValue" />
                </div>
                <div class="col-4">
                    <input type="submit" value="Search" class="btn btn-info " />
                </div>
            </form>
        </div>
    </div>
    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FullName)</td>
                <td>@Html.DisplayNameFor(U => U.Bio)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FullName</td>
                    <td>@User.Bio</td>
                    <td>@User.Email</td>
                    <td>@String.Join(",", User.Roles)</td>
                    <partial name="_ButtonPartialView" model="@User.Id">
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-info">
        <h3>There Is No Users !</h3>
    </div>
}

